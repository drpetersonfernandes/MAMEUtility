<Window 
    x:Class="MAMEUtility.LogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:MAMEUtility.ViewModels"
    Title="MAME Utility Log" 
    Height="450" 
    Width="600"
    d:DataContext="{d:DesignInstance Type=viewModels:LogViewModel}"
    mc:Ignorable="d">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                Text="Application Log" 
                FontSize="18" 
                FontWeight="Bold" 
                VerticalAlignment="Center" />
            
            <StackPanel 
                Grid.Column="1" 
                Orientation="Horizontal">
                <Button 
                    Content="Clear Log" 
                    Command="{Binding ClearCommand}" 
                    Style="{StaticResource DefaultButtonStyle}" />
                
            </StackPanel>
        </Grid>
        
        <!-- Log content -->
        <Border 
            Grid.Row="1" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            CornerRadius="3">
            <TextBox 
                Name="LogTextBox" 
                Text="{Binding LogText, Mode=TwoWay}" 
                IsReadOnly="True" 
                VerticalScrollBarVisibility="Auto" 
                HorizontalScrollBarVisibility="Auto" 
                TextWrapping="Wrap"
                FontFamily="Consolas"
                FontSize="12"
                Padding="5"
                Background="#FAFAFA" />
        </Border>
        
        <!-- Status bar -->
        <StatusBar Grid.Row="2" Height="25" Margin="0,10,0,0" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>