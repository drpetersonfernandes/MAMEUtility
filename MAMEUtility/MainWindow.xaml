<Window
    x:Class="MAMEUtility.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MAMEUtility"
    Title="MAME Utility"
    Width="600"
    Height="550"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Width" Value="220" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        
        <Style x:Key="UtilityButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="5,5" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Menu -->
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Main content -->
            <RowDefinition Height="Auto" /> <!-- Progress bar -->
            <RowDefinition Height="Auto" /> <!-- Processing info -->
            <RowDefinition Height="Auto" /> <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0" Background="#F0F0F0">
            <MenuItem Header="_File">
                <MenuItem Header="View _Log" Click="ShowLog_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Donate" Click="Donate_Click" />
                <MenuItem Header="_About" Click="About_Click" />
            </MenuItem>
        </Menu>

        <!-- Header with logo -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="MAME Utility" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0" />
        </StackPanel>

        <!-- Main content -->
        <Grid Grid.Row="2" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- List generation buttons -->
            <Border 
                Grid.Column="0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Background="#F8F8F8" 
                CornerRadius="5" 
                Padding="10">
                <StackPanel>
                    <TextBlock 
                        Text="List Generation" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Margin="0,0,0,10" 
                        HorizontalAlignment="Center"/>
                    
                    <Button
                        x:Name="CreateMameFullButton"
                        Style="{StaticResource OperationButtonStyle}"
                        Click="CreateMameFull_Click"
                        Content="Create MAME Full List" />
                    <Button
                        x:Name="CreateMameManufacturerButton"
                        Style="{StaticResource OperationButtonStyle}"
                        Click="CreateMameManufacturer_Click"
                        Content="Create MAME Manufacturer List" />
                    <Button
                        x:Name="CreateMameYearButton"
                        Style="{StaticResource OperationButtonStyle}"
                        Click="CreateMameYear_Click"
                        Content="Create MAME Year List" />
                    <Button
                        x:Name="CreateMameSourcefileButton"
                        Style="{StaticResource OperationButtonStyle}"
                        Click="CreateMameSourcefile_Click"
                        Content="Create MAME Sourcefile List" />
                    <Button
                        x:Name="CreateMameSoftwareListButton"
                        Style="{StaticResource OperationButtonStyle}"
                        Click="CreateMameSoftwareList_Click"
                        Content="Create MAME Software List" />
                </StackPanel>
            </Border>

            <!-- Utility buttons -->
            <Border 
                Grid.Column="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Background="#F8F8F8" 
                CornerRadius="5" 
                Padding="10"
                Margin="15,0,0,0">
                <StackPanel>
                    <TextBlock 
                        Text="Utilities" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Margin="0,0,0,10" 
                        HorizontalAlignment="Center"/>
                    
                    <Button
                        x:Name="MergeListsButton"
                        Style="{StaticResource UtilityButtonStyle}"
                        Click="MergeLists_Click"
                        Content="Merge Lists" />
                    <Button
                        x:Name="CopyRomsButton"
                        Style="{StaticResource UtilityButtonStyle}"
                        Click="CopyRoms_Click"
                        Content="Copy ROMs" />
                    <Button
                        x:Name="CopyImagesButton"
                        Style="{StaticResource UtilityButtonStyle}"
                        Click="CopyImages_Click"
                        Content="Copy Images" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Progress bar -->
        <Grid Grid.Row="3" Margin="15,10,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock 
                Grid.Row="0" 
                Text="Operation Progress:" 
                Margin="0,0,0,5"
                FontWeight="SemiBold"/>
            
            <ProgressBar
                x:Name="OverallProgressBar"
                Grid.Row="1"
                Height="25"
                Background="#E0E0E0"
                Foreground="#4CAF50">
                <ProgressBar.Template>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3">
                            <Grid>
                                <Rectangle 
                                    x:Name="PART_Track" 
                                    Fill="{TemplateBinding Background}" />
                                <Rectangle 
                                    x:Name="PART_Indicator" 
                                    Fill="{TemplateBinding Foreground}" 
                                    HorizontalAlignment="Left" 
                                    Width="{TemplateBinding Value, Converter={StaticResource ProgressToWidthConverter}}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:0}%}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </ProgressBar.Template>
            </ProgressBar>
        </Grid>
        
        <!-- Processing info (new row 4) -->
        <Border 
            Grid.Row="4"
            x:Name="ProcessingOverlay"
            Background="#80000000" 
            Visibility="Collapsed"
            Margin="15,0,15,10"
            CornerRadius="5">
            <StackPanel 
                Orientation="Vertical" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="10">
                <TextBlock 
                    x:Name="ProcessingTextBlock"
                    Text="Processing..." 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="16"
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    x:Name="ElapsedTimeTextBlock"
                    Text="Elapsed: 00:00" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="14"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"/>
                <Button 
                    x:Name="CancelProcessingButton"
                    Content="Cancel Operation"
                    Width="150"
                    Height="35"
                    Margin="0,20,0,0"
                    Background="#E74C3C"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="CancelProcessingButton_Click"
                    Style="{StaticResource DefaultButtonStyle}"/>
            </StackPanel>
        </Border>
        
        <!-- New Status Bar (row 5) -->
        <StatusBar Grid.Row="5" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="StatusBarVersion" Text="{x:Static local:MainWindow.VersionText}" />
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>
